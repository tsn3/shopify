<div class="comment-list">
    <div class="single-comment justify-content-between d-flex">
        <div class="user justify-content-between d-flex">
            <div class="thumb">
                <img src="{{ "comment_1.png" | asset_url  }}" alt="{{ comment.author }}">
            </div>
            <div class="desc">
                <p class="comment">
                    {{ comment.content }}
                </p>
                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <h5>
                            <a href="#">{{ comment.author }}</a>
                        </h5>
                        <p class="date">{{ comment.created_at | date: format: 'date' }}</p>
                    </div>
                    <div class="reply-btn">
                        <a href="#" class="btn-reply text-uppercase">{{ 'blogs.comments.reply' | t }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>