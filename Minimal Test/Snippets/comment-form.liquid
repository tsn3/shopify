<h4>{{ 'blogs.comments.title' | t }}</h4>
{% form 'new_comment', article %}
    <form class="form-contact comment_form" action="#" id="commentForm">
        {{ form.errors | default_errors }}

        <div class="row">
            <div class="grid form-vertical">
                <div class="col-12">
                    <div class="form-group">
                        <textarea class="form-control w-100 input-full{% if form.errors contains 'body' %} input--error{% endif %}" placeholder="{{ 'blogs.comments.message' | t }}"" name="comment[body]" id="comment" cols="30" rows="9" placeholder="{{ 'blogs.comments.message' | t }}">{{ form.body }}</textarea>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="text" name="comment[author]" id="CommentAuthor" class="input-full{% if form.errors contains 'author' %} input--error{% endif %}" placeholder="{{ 'blogs.comments.name' | t }}" value="{{ form.author }}" autocapitalize="words">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="email" name="comment[email]" id="CommentEmail" class="input-full{% if form.errors contains 'email' %} input--error{% endif %}" placeholder="{{ 'blogs.comments.email' | t }}" value="{{ form.email }}" autocorrect="off" autocapitalize="off">
                    </div>
                </div>
            </div>
        </div>
        {% if blog.moderated? %}
            <p>{{ 'blogs.comments.moderated' | t }}</p>
        {% endif %}
        <div class="form-group">
            <button type="submit" class="button button-contactForm btn_1 boxed-btn">{{ 'blogs.comments.post' | t }}</button>
        </div>
    </form>
{% endform %}