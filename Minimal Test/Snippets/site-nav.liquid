<nav>
    <ul id="navigation">
        {%- for link in site-nav.links -%}
            {% assign parent_index = forloop.index %}
            <li>
                <a href="{{ link.url }}" {% unless request.page_type == 'index' %}{% if link.active %}aria-current="page"{% endif %}{% endunless%}>
                    {{ link.title }}
                    <!--           {% unless request.page_type == 'index' %}{% if link.active %}aria-current="page"{% endif %}{% endunless%}>
              {{ link.title | escape }}
              <span class="icon icon-arrow-down" aria-hidden="true"></span> -->
                </a>

                {%- if link.links != blank -%}
                    <ul>
                        {%- for child_link in link.links -%}
                            <li>
                                <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                                    {{ child_link.title }}
                                </a>

                                {%- if child_link.links != blank -%}
                                    <ul>
                                        {%- for grandchild_link in child_link.links -%}
                                            <li>
                                                <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                                                    {{ grandchild_link.title }}
                                                </a>
                                            </li>
                                        {%- endfor -%}
                                    </ul>
                                {%- endif -%}

                            </li>
                        {%- endfor -%}
                    </ul>
                {%- endif -%}

            </li>
        {%- endfor -%}
    </ul>
</nav>