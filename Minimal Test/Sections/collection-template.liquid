{% paginate collection.products by 6 %}
    <div id="CollectionSection" data-section-id="{{ section.id }}" data-section-type="collection-template" data-sort-enabled="{{ section.settings.sort_enable }}">

        <!-- Latest Products Start -->
        <section class="popular-items latest-padding">
            <div class="container">
                {% if section.settings.sort_enable %}
                    <div class="row product-btn justify-content-between mb-40">
                        {% if section.settings.sort_enable %}
                            <div class="form-horizontal">
                                <select name="sort_by" id="SortBy" class="btn--tertiary" aria-describedby="a11y-refresh-page-message">
                                    {% for option in collection.sort_options %}
                                        <option value="{{ option.value }}"{% if sort_by == option.value %} selected="selected"{% endif %}>{{ option.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}
                        <div class="properties__button">
                            <!--Nav Button  -->
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">{{ 'collections.sorting.newest_arrivals' | t }}</a>
                                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">{{ 'collections.sorting.price_high_low' | t }}</a>
                                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">{{ 'collections.sorting.most_populer' | t }}</a>
                                </div>
                            </nav>
                            <!--End Nav Button  -->
                        </div>
                        <!-- Grid and List view -->
                        <div class="grid-list-view">
                        </div>
                        <!-- Select items -->

                        <div class="select-this">


                            <form action="#">
                                <div class="select-itms">
                                    <select name="select" id="select1">
                                        <option value="">40 {{ 'collections.sorting.per_page' | t }}</option>
                                        <option value="">50 {{ 'collections.sorting.per_page' | t }}</option>
                                        <option value="">60 {{ 'collections.sorting.per_page' | t }}</option>
                                        <option value="">70 {{ 'collections.sorting.per_page' | t }}</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                {% endif %}

                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="row">
                            {% for product in collection.products %}
                                {% assign featured = product %}
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                                    <div class="single-popular-items mb-50 text-center">
                                        {% include 'product-grid-item' %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% if paginate.pages > 1 %}
                    <nav class="blog-pagination justify-content-center d-flex">
                        {% include 'pagination-custom' %}
                    </nav>
                {% endif %}
            </div>
        </section>
    </div>
{% endpaginate %}



{% schema %}
{
"name": {
"en": "Collection cats"
},
"settings": [
{
"type": "checkbox",
"id": "vendor_enable",
"label": {
"en": "Show product vendor"
}
},
{
"type": "checkbox",
"id": "show_sale_circle",
"label": {
"en": "Show product sale circle"
}
},
{
"type": "checkbox",
"id": "show_sold_out_circle",
"label": {
"en": "Show product sold out circle"
}
},
{
"type": "checkbox",
"id": "sort_enable",
"label": {
"en": "Enable collection sorting"
}
},
{
"type": "checkbox",
"id": "tags_enable",
"label": {
"en": "Enable filtering by product tag"
}
},
{
"type": "checkbox",
"id": "center_grid_link",
"label": {
"en": "Center text below product images"
}
}
]
}
{% endschema %}
